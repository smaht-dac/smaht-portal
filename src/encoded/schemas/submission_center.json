{
    "title": "SubmissionCenter",
    "$id": "/profiles/submission_center.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "required": [
        "identifier",
        "title"
    ],
    "identifyingProperties": [
        "aliases",
        "identifier",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/identifier"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/static_embeds"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/title"
        },
        {
            "$ref": "mixins.json#/uuid"
        }
    ],
    "type": "object",
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "status": {
            "default": "shared"
        },
        "url": {
            "title": "URL",
            "description": "An external resource with additional information about the SubmissionCenter",
            "type": "string",
            "format": "uri"
        },
        "leader": {
            "title": "Leader",
            "description": "The leader of the subsmission center",
            "type": "string",
            "linkTo": "User"
        }
    }
}
