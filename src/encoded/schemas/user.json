{
    "title": "User",
    "$id": "/profiles/user.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "email",
        "first_name",
        "last_name"
    ],
    "identifyingProperties": [
        "email",
        "aliases",
        "email",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/uuid"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "first_name": {
            "$merge": "snovault:schemas/user.json#/properties/first_name"
        },
        "email": {
            "$merge": "snovault:schemas/user.json#/properties/email"
        },
        "groups": {
            "$merge": "snovault:schemas/user.json#/properties/groups",
            "items": {
                "type": "string",
                "enum": [
                    "admin",
                    "read-only-admin",
                    "dbgap",
                    "public-dbgap"
                ]
            }
        },
        "last_name": {
            "$merge": "snovault:schemas/user.json#/properties/last_name"
        },
        "preferred_email": {
            "$merge": "snovault:schemas/user.json#/properties/preferred_email"
        },
        "status": {
            "$merge": "snovault:schemas/user.json#/properties/status"
        },
        "time_zone": {
            "$merge": "snovault:schemas/user.json#/properties/timezone"
        },
        "was_unauthorized": {
            "$merge": "snovault:schemas/user.json#/properties/was_unauthorized"
        },
        "submits_for": {
            "title": "Submits for",
            "description": "Submission Centers a user is authorized to submit data for.",
            "type": "array",
            "permission": "restricted_fields",
            "lookup": 70,
            "uniqueItems": true,
            "items": {
                "description": "A Submission Centers a user is authorized to submit for.",
                "type": "string",
                "linkTo": "SubmissionCenter"
            }
        },
        "submission_centers": {
            "title": "Generated By",
            "description": "Submission Centers that created this item.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "linkTo": "SubmissionCenter"
            }
        },
        "consortia": {
            "title": "Consortia",
            "description": "Consortia associated with this item.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "linkTo": "Consortium"
            }
        },
        "institution": {
            "title": "Institution",
            "type": "string",
            "comment": "Can be user supplied - purely informational"
        }
    }
}
