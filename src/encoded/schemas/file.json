{
    "title": "File",
    "description": "Generic file",
    "$id": "/profiles/file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "data_category",
        "data_type",
        "file_format"
    ],
    "anyOf": [
        {
            "required": [
                "submission_centers"
            ]
        },
        {
            "required": [
                "consortia"
            ]
        }
    ],
    "identifyingProperties": [
        "accession",
        "aliases",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/uuid"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "FI"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "default": "uploading",
            "enum": [
                "uploading",
                "uploaded",
                "upload failed",
                "to be uploaded by workflow",
                "released",
                "in review",
                "obsolete",
                "archived",
                "deleted",
                "public",
                "restricted"
            ]
        },
        "file_format": {
            "$merge": "encoded_core:schemas/file.json#/properties/file_format"
        },
        "filename": {
            "$merge": "encoded_core:schemas/file.json#/properties/filename"
        },
        "file_size": {
            "$merge": "encoded_core:schemas/file.json#/properties/file_size"
        },
        "md5sum": {
            "$merge": "encoded_core:schemas/file.json#/properties/md5sum"
        },
        "content_md5sum": {
            "$merge": "encoded_core:schemas/file.json#/properties/content_md5sum"
        },
        "quality_metrics": {
            "$merge": "encoded_core:schemas/file.json#/properties/quality_metrics"
        },
        "data_category": {
            "title": "Data Category",
            "description": "Category for information in the file",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "Genome Region",
                    "Quality Control",
                    "Reference Genome",
                    "Sequencing Reads",
                    "Germline Variant Calls",
                    "Somatic Variant Calls"
                ]
            }
        },
        "data_type": {
            "title": "Data Type",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "Aligned Reads",
                    "Image",
                    "Index",
                    "Reference Sequence",
                    "Sequence Interval",
                    "Statistics",
                    "Unaligned Reads",
                    "CNV",
                    "Indel",
                    "MEI",
                    "SNV",
                    "SV"
                ]
            }
        },
        "extra_files": {
            "$merge": "encoded_core:schemas/file.json#/properties/extra_files"
        },
        "o2_path": {
            "title": "O2 Path",
            "description": "Path to file on O2",
            "permission": "restricted_fields",
            "type": "string"
        },
        "sequencing_center": {
            "title": "Sequencing Center",
            "description": "Sequencing Center",
            "type": "string",
            "linkTo": "SubmissionCenter",
            "permission": "restricted_fields"
        },
        "s3_lifecycle_category": {
            "description": "The lifecycle category determines how long a file remains in a certain storage class.  If set to ignore, lifecycle management will have no effect on this file",
            "permission": "restricted_fields",
            "enum": [
                "ignore",
                "long_term_access",
                "long_term_access_long_term_archive",
                "long_term_archive",
                "no_storage",
                "short_term_access",
                "short_term_access_long_term_archive",
                "short_term_archive"
            ],
            "title": "S3 Lifecycle Category",
            "type": "string"
        },
        "s3_lifecycle_last_checked": {
            "$merge": "encoded_core:schemas/file.json#/properties/s3_lifecycle_last_checked"
        },
        "s3_lifecycle_status": {
            "$merge": "encoded_core:schemas/file.json#/properties/s3_lifecycle_status"
        }
    },
    "facets": {
        "data_type": {
            "title": "Data Category"
        },
        "file_sets.libraries.assay.display_title": {
            "title": "Experimental Assay"
        },
        "file_sets.sequencing.sequencer.display_title": {
            "title": "Sequencing Platform"
        },
        "file_format.display_title": {
            "title": "Data Format"
        },
        "submission_centers.display_title": {
            "title": "Generated By"
        },
        "sequencing_center.display_title": {
            "title": "Sequencing Center"
        },
        "software.display_title": {
            "title": "Analysis Method"
        }
    },
    "columns": {
        "access_status": {
            "title": "Access"
        },
        "annotated_filename": {
            "title": "File"
        },
        "data_type": {
            "title": "Data Category"
        },
        "file_sets.libraries.assay.display_title": {
            "title": "Assay"
        },
        "file_sets.sequencing.sequencer.display_title": {
            "title": "Platform"
        },
        "file_format.display_title": {
            "title": "Data Format"
        },
        "submission_centers.display_title": {
            "title": "Generated By"
        },
        "sequencing_center.display_title": {
            "title": "Sequencing Center"
        },
        "software.display_title": {
            "title": "Method"
        },
        "file_size": {
            "title": "File Size"
        }
    }
}
