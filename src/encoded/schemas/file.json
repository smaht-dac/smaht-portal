{
    "title": "File",
    "description": "Generic file",
    "$id": "/profiles/file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "data_category",
        "data_type",
        "file_format"
    ],
    "anyOf": [
        {
            "required": [
                "submission_centers"
            ]
        },
        {
            "required": [
                "consortia"
            ]
        }
    ],
    "identifyingProperties": [
        "accession",
        "aliases",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/uuid"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "FI"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "default": "uploading",
            "enum": [
                "uploading",
                "uploaded",
                "upload failed",
                "to be uploaded by workflow",
                "released",
                "in review",
                "obsolete",
                "archived",
                "deleted",
                "public"
            ]
        },
        "file_format": {
            "$merge": "encoded_core:schemas/file.json#/properties/file_format"
        },
        "filename": {
            "$merge": "encoded_core:schemas/file.json#/properties/filename"
        },
        "file_size": {
            "$merge": "encoded_core:schemas/file.json#/properties/file_size"
        },
        "md5sum": {
            "$merge": "encoded_core:schemas/file.json#/properties/md5sum"
        },
        "content_md5sum": {
            "$merge": "encoded_core:schemas/file.json#/properties/content_md5sum"
        },
        "quality_metrics": {
            "$merge": "encoded_core:schemas/file.json#/properties/quality_metrics"
        },
        "data_category": {
            "title": "Data Category",
            "description": "Category for information in the file",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "Genome Region",
                    "Quality Control",
                    "Reference Genome",
                    "Sequencing Reads",
                    "Variant Calls"
                ]
            }
        },
        "data_type": {
            "title": "Data Type",
            "description": "Detailed type of information in the file",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "Aligned Reads",
                    "Germline Variant Calls",
                    "Image",
                    "Index",
                    "Reference Sequence",
                    "Sequence Interval",
                    "Somatic Variant Calls",
                    "Statistics",
                    "Unaligned Reads"
                ]
            }
        },
        "o2_path": {
            "title": "O2 Path",
            "description": "Path to file on O2",
            "type": "string"
        }
    },
    "facets": {
        "file_format.display_title": {
            "title": "Data Format",
            "description": "Format of the file, i.e. the file extension"
        },
        "file_size": {
            "title": "File Size",
            "description": "Filter using range of size of the file",
            "aggregation_type": "stats",
            "increments": [
                1024,
                10240,
                1048576,
                10485760,
                104857600,
                1073741824,
                10737418240,
                107374182400
            ]
        },
        "date_created": {
            "title": "Date Created",
            "aggregation_type": "date_histogram"
        }
    },
    "columns": {
        "accession": {
            "title": "File"
        },
        "data_type": {
            "title": "Data Category"
        },
        "file_format.display_title": {
            "title": "Data Format"
        },
        "submission_centers.display_title": {
            "title": "GCC"
        },
        "file_size": {
            "title": "File Size"
        },
        "date_created": {
            "title": "Submission Date"
        }
    }
}
