{
    "title": "Reference Genome",
    "$id": "/profiles/reference_genome.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "submission_centers",
        "title",
        "category"
    ],
    "oneOf": [
        {
            "required": [
                "identifier"
            ]
        },
        {
            "required": [
                "submitted_id"
            ]
        }
    ],
    "identifyingProperties": [
        "accession",
        "submitted_id",
        "identifier",
        "aliases",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/submitted_id"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/title"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/version"
        }
    ],
    "properties": {
        "accession": {
            "accessionType": "RG"
        },
        "identifier": {
            "title": "Identifier",
            "description": "Identifier for reference genome (Must contain GR or gr)",
            "type": "string",
            "uniqueKey": true,
            "minLength": 2,
            "pattern": "^[A-Za-z0-9-_.]{0,}[Gg][Rr][A-Za-z0-9-_.]{1,}$"
        },
        "title": {
            "pattern": "^[A-Za-z0-9]{3,}$"
        },
        "schema_version": {
            "default": "1"
        },
        "version": {
            "pattern": "^[A-Za-z0-9_-.]{3,}$"
        },
        "submitted_id": {
            "pattern": "^[A-Z0-9]{3,}_REFERENCE-GENOME_[A-Z0-9-_.]{4,}$"
        },
        "category": {
            "title": "Category",
            "description": "Category of genome assembly",
            "type": "string",
            "enum": [
                "Donor Specific Assembly",
                "Primary Assembly"
            ]
        },
        "completion_status": {
            "title": "Completion Status",
            "description": "Assembly status of completeness",
            "type": "string",
            "enum": [
                "Complete",
                "Incomplete"
            ]
        },
        "genbank_assembly": {
            "title": "GenBank Assembly",
            "description": "GenBank assembly accession",
            "type": "string",
            "pattern": "^GCA_[0-9]{9}.[0-9]{1,}$"
        },
        "refseq_assembly": {
            "title": "RefSeq Assembly",
            "description": "RefSeq assembly accession",
            "type": "string",
            "pattern": "^GCF_[0-9]{9}.[0-9]{1,}$"
        },
        "software": {
            "title": "Software",
            "description": "Software used to generate the assembly",
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "type": "string",
                "linkTo": "Software"
            }
        },
        "files": {
            "title": "Files",
            "description": "Files associated with the reference genome",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "linkTo": "File"
            }
        }
    },
    "facets": {
        "submission_centers.display_title": {
            "title": "Submitted By"
        },
        "category": {
            "title": "Assembly Type"
        },
        "completion_status": {
            "title": "Completion Status"
        }
    },
    "columns": {
        "submitted_id": {
            "title": "Submitted ID"
        },
        "code": {
            "title": "Code"
        },
        "category": {
            "title": "Assembly Type"
        }
    }
}