{
    "title": "Sample Mixture",
    "$id": "/profiles/sample_mixture.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "components",
        "submitted_id"
    ],
    "anyOf": [
        {
            "required": [
                "submission_centers"
            ]
        },
        {
            "required": [
                "consortia"
            ]
        }
    ],
    "identifyingProperties": [
        "accession",
        "submitted_id",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/submitted_id"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/title"
        },
        {
            "$ref": "mixins.json#/uuid"
        }
    ],
    "properties": {
        "accession": {
            "accessionType": "SA"
        },
        "schema_version": {
            "default": "1"
        },
        "components": {
            "title": "Components",
            "description": "Samples in the mixture and their corresponding ratios",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "ratio",
                    "sample"
                ],
                "properties": {
                    "ratio": {
                        "title": "Ratio",
                        "description": "Ratio of the sample to the total mixture (percentage)",
                        "type": "number",
                        "minimum": 0
                    },
                    "sample": {
                        "title": "Sample",
                        "description": "Link to associated sample",
                        "type": "string",
                        "linkTo": "Sample"
                    }
                }
            }
        },
        "protocols": {
            "title": "Protocol",
            "description": "Link to associated protocol",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "linkTo": "Protocol"
            }
        },
        "sample_preparation": {
            "title": "Sample Preparation",
            "description": "Link to associated sample preparation",
            "type": "string",
            "linkTo": "SamplePreparation"
        }
    }
}
