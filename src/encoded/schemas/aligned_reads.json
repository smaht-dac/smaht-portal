{
    "title": "Aligned Reads",
    "description": "Files containing sequencing reads aligned to a reference genome",
    "$id": "/profiles/aligned_reads.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "file_format",
        "file_sets",
        "filename",
        "reference_genome",
        "submission_centers",
        "submitted_id"
    ],
    "identifyingProperties": [
        "accession",
        "submitted_id",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/alignment_details"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/file_links"
        },
        {
            "$ref": "mixins.json#/file_release"
        },
        {
            "$ref": "mixins.json#/flow_cell_details"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/n50"
        },
        {
            "$ref": "mixins.json#/reference_genome"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/submitted_id"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "file.json#/properties"
        },
        {
            "$ref": "submitted_file.json#/properties"
        }
    ],
    "mixinFacets": [
        {
            "$ref": "file.json#/facets"
        }
    ],
    "mixinColumns": [
        {
            "$ref": "file.json#/columns"
        }
    ],
    "properties": {
        "accession": {
            "accessionType": "AR"
        },
        "data_category": {
            "items": {
                "type": "string",
                "enum": [
                    "Sequencing Reads"
                ]
            },
            "default": [
                "Sequencing Reads"
            ]
        },
        "data_type": {
            "items": {
                "type": "string",
                "enum": [
                    "Aligned Reads",
                    "In Silico Generated"
                ]
            },
            "default": [
                "Aligned Reads"
            ]
        },
        "schema_version": {
            "default": "1"
        },
        "submitted_id": {
            "pattern": "^[A-Z0-9]{3,}_ALIGNED-READS_[A-Z0-9-_.]{4,}$"
        }
    },
    "facets": {
        "reference_genome.display_title": {
            "title": "Reference Genome"
        }
    }
}
