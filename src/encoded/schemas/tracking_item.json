            "title": "Tracking Type",
            "type": "string",
            "description": "What this item tracks. Defaults to other",
            "default": "other",
            "enum" : [
                "other",
                "download_tracking",
                "google_analytics",
                "jupyterhub_session"
            ]
		},
        "download_tracking": {
            "$merge": "encoded_core:schemas/tracking_item.json#/properties/download_tracking"
