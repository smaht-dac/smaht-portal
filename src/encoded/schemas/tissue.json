{
    "title": "Tissue",
    "description": "Tissues collected from an individual",
    "$id": "/profiles/tissue.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "donor",
        "external_id",
        "submission_centers",
        "submitted_id",
        "uberon_id"
    ],
    "identifyingProperties": [
        "accession",
        "submitted_id",
        "uuid"
    ],
    "dependentRequired": {
        "size": [
            "size_unit"
        ],
        "size_unit": [
            "size"
        ]
    },
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/code"
        },
        {
            "$ref": "mixins.json#/external_id"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/submitted_id"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/preservation_medium"
        },
        {
            "$ref": "mixins.json#/preservation_type"
        },
        {
            "$ref": "sample_source.json#/properties"
        }
    ],
    "properties": {
        "accession": {
            "accessionType": "TI"
        },
        "external_id": {
            "submissionExamples": [
                "ST001-1A",
                "PS0235"
            ]
        },
        "schema_version": {
            "default": "5"
        },
        "submitted_id": {
            "pattern": "^[A-Z0-9]{3,}_TISSUE_[A-Z0-9-_.]{4,}$"
        },
        "ischemic_time": {
            "title": "Ischemic Time",
            "description": "Time interval of ischemia (hours)",
            "type": "number",
            "minimum": 0
        },
        "anatomical_location": {
            "title": "Anatomical Location",
            "description": "Anatomical location of the tissue in the donor",
            "type": "string"
        },
        "pathology_notes": {
            "title": "Pathology Notes",
            "description": "Notes from pathologist report on the tissue",
            "type": "string"
        },
        "ph": {
            "title": "pH",
            "description": "pH of the tissue",
            "type": "number",
            "minimum": 0,
            "maximum": 14
        },
        "prosector_notes": {
            "title": "Prosector Notes",
            "description": "Notes from prosector report on the tissue recovery",
            "type": "string"
        },
        "sample_count": {
            "title": "Sample Count",
            "description": "Number of samples produced from the tissue",
            "type": "integer",
            "minimum": 0
        },
        "size": {
            "title": "Size",
            "description": "Size of the tissue",
            "type": "number",
            "minimum": 0
        },
        "size_unit": {
            "title": "Size Unit",
            "description": "Unit of measurement for size of the tissue",
            "type": "string",
            "enum": [
                "cm^2",
                "cm^3"
            ]
        },
        "uberon_id": {
            "title": "Uberon Id",
            "description": "Uberon Ontology identifier for the tissue.",
            "type": "string",
            "linkTo": "OntologyTerm"
        },
        "volume": {
            "title": "Volume",
            "description": "Volume of the tissue (mL)",
            "type": "number",
            "minimum": 0
        },
        "weight": {
            "title": "Weight",
            "description": "Weight of the tissue (g)",
            "type": "number",
            "minimum": 0
        },
        "donor": {
            "title": "Donor",
            "description": "Link to the associated donor",
            "type": "string",
            "linkTo": "Donor"
        }
    },
    "facets": {
        "submission_centers.display_title": {
            "title": "Submitted By"
        },
        "donor.display_title": {
            "title": "Donor"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "submitted_id": {
            "title": "Submitted ID"
        },
        "donor.display_title": {
            "title": "Donor"
        },
        "submission_centers.display_title": {
            "title": "Submitted By"
        }
    }
}