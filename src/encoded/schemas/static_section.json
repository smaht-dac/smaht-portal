{
    "title": "Static Section",
    "$id": "/profiles/static_section.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "identifier"
    ],
    "anyOf": [
        {
            "required": [
                "submission_centers"
            ]
        },
        {
            "required": [
                "consortia"
            ]
        }
    ],
    "oneOf": [
        {
            "allOf": [
                {
                    "not": {
                        "required": [
                            "body"
                        ]
                    }
                },
                {
                    "not": {
                        "required": [
                            "file"
                        ]
                    }
                }
            ]
        },
        {
            "required": [
                "body"
            ],
            "not": {
                "required": [
                    "file"
                ]
            }
        },
        {
            "required": [
                "file"
            ],
            "not": {
                "required": [
                    "body"
                ]
            }
        }
    ],
    "identifyingProperties": [
        "aliases",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/category"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/identifier"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/title"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "user_content.json#/properties"
        }
    ],
    "properties": {
        "category": {
            "items": {
                "type": "string",
                "enum": [
                    "Page Section"
                ]
            }
        },
        "identifier": {
            "pattern": "^([A-Za-z0-9-_]+[.])*[A-Za-z0-9-_]+$"
        },
        "schema_version": {
            "default": "1"
        },
        "body": {
            "$merge": "encoded_core:schemas/static_section.json#/properties/body"
        },
        "file": {
            "$merge": "encoded_core:schemas/static_section.json#/properties/file"
        },
        "section_type": {
            "$merge": "encoded_core:schemas/static_section.json#/properties/section_type"
        },
        "options": {
            "$merge": "encoded_core:schemas/static_section.json#/properties/options"
        }
    }
}
