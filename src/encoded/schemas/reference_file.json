{
    "title": "Reference File",
    "description": "Reference file for bioinformatics pipelines",
    "$id": "/profiles/reference_file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "data_category",
        "data_type",
        "file_format"
    ],
    "anyOf": [
        {
            "required": [
                "submission_centers"
            ]
        },
        {
            "required": [
                "consortia"
            ]
        }
    ],
    "identifyingProperties": [
        "accession",
        "aliases",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/title"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "file.json#/properties"
        }
    ],
    "mixinFacets": [
        {
            "$ref": "file.json#/facets"
        }
    ],
    "mixinColumns": [
        {
            "$ref": "file.json#/columns"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "2"
        },
        "code": {
            "title": "Code",
            "description": "Code used in file naming scheme",
            "type": "string",
            "permission": "restricted_fields",
            "pattern": "^[A-Za-z0-9_]{2,}$"
        },
        "version": {
            "description": "The version of the reference file",
            "pattern": "[A-Za-z0-9._-]+"
        }
    }
}
