{
    "title": "Cell Sample",
    "$id": "/profiles/cell_sample.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "cell_ontology_id",
        "submitted_id",
        "tissue"
    ],
    "anyOf": [
        {
            "required": [
                "submission_centers"
            ]
        },
        {
            "required": [
                "consortia"
            ]
        }
    ],
    "identifyingProperties": [
        "accession",
        "submitted_id",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/submitted_id"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "sample.json#/properties"
        }
    ],
    "properties": {
        "accession": {
            "accessionType": "CS"
        },
        "schema_version": {
            "default": "1"
        },
        "cell_count": {
            "title": "Cell Count",
            "description": "Number of cells collected",
            "type": "integer",
            "minimum": 0
        },
        "cell_ontology_id": {
            "title": "Cell Ontology ID",
            "description": "Cell Ontology identifier for the cell sample",
            "type": "string",
            "pattern": "^CL:[0-9]{7}$"
        },
        "preservation_media": {
            "title": "Preservation Media",
            "description": "Media used for sample preservation",
            "type": "string",
            "enum": [
                "TBD"
            ]
        },
        "preservation_type": {
            "title": "Preservation Type",
            "description": "Classification of sample preservation",
            "type": "string",
            "enum": [
                "Fresh",
                "Frozen"
            ]
        },
        "tissue": {
            "title": "Tissue",
            "description": "Tissue source for the sample",
            "type": "string",
            "linkTo": "Tissue"
        },
        "parent_samples": {
            "title": "Parent Samples",
            "desscription": "Samples from which the cells were isolated",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "linkTo": "Sample"
            }
        }
    }
}
