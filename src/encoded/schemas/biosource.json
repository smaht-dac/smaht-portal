{
    "title": "Biosource",
    "id": "/profiles/biosource.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "required": [
        "category"
    ],
    "anyOf": [
        {
            "required": [
                "submission_centers",
                "submitter_id"
            ]
        },
        {
            "required": [
                "consortia"
            ]
        }
    ],
    "identifyingProperties": [
        "accession",
        "aliases",
        "center_submitter_ids",
        "identifier",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/category"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/identifier"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/ontology_term"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/submitter_id"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/uuid"
        }
    ],
    "type": "object",
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "SO"
        },
        "category": {
            "enum": [
                "Primary cell",
                "Primary cell line",
                "Immortalized cell line",
                "Stem cell",
                "Induced pluripotent stem cell",
                "Stem cell derived cell line",
                "Tissue"
            ]
        },
        "subject": {
            "title": "Subject",
            "description": "Source of the biological material",
            "type": "string",
            "linkTo": "Subject"
        }
    },
    "facets": {},
    "columns": {}
}
