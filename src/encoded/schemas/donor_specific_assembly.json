{
    "title": "Donor Specific Assembly",
    "description": "A genome assembly generated from an individual donor.",
    "$id": "/profiles/donor_specific_assembly.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "submitted_id",
        "title",
        "submission_centers",
        "derived_from"
    ],
    "identifyingProperties": [
        "accession",
        "submitted_id",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/code"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/title"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/submitted_id"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/version"
        }
    ],
    "properties": {
        "accession": {
            "accessionType": "DA"
        },
        "schema_version": {
            "default": "1"
        },
        "version": {
            "description": "Version of the assembly"
        },
        "submitted_id": {
            "pattern": "^[A-Z0-9]{3,}_DONOR-SPECIFIC-ASSEMBLY_[A-Z0-9-_.]{4,}$"
        },
        "genome_size": {
            "title": "Genome Size",
            "description": "The size of both combined assembled haplotypes (bp)",
            "type": "integer",
            "minimum": 0,
            "allow_commas": true,
            "allow_multiplier_suffix": true
        },
        "ploidy": {
            "title": "Ploidy",
            "description": "Ploidy of the assembly",
            "type": "string",
            "suggested_enum": [
                "Diploid",
                "Haploid",
                "Aneuploid"
            ]
        },
        "title": {
            "description": "Title of the assembly (e.g. ST001_DSA)"
        },
        "derived_from": {
            "title": "Derived From",
            "description": "Link to files used as input to generate the assembly",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "linkTo": "File"
            }
        }
    },
    "facets": {
        "submission_centers.display_title": {
            "title": "Submitted By"
        }
    },
    "columns": {
        "title": {
            "title": "Title"
        },
        "submitted_id": {
            "title": "Submitted ID"
        },
        "submission_centers.display_title": {
            "title": "Submitted By"
        }
    }
}
