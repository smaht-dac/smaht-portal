{
    "title": "Donor Specific Assembly",
    "$id": "/profiles/donor_specific_assembly.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "submission_centers",
        "submitted_id"
    ],
    "anyOf": [
        {
            "required": [
                "donor"
            ]
        },
        {
            "required": [
                "cell_line"
            ]
        }
    ],
    "identifyingProperties": [
        "accession",
        "submitted_id",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/code"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/protocols"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/submitted_id"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/title"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/version"
        },
        {
            "$ref": "mixins.json#/comments"
        },
        {
            "$ref": "mixins.json#/file_links"
        }
    ],
    "properties": {
        "accession": {
            "accessionType": "DA"
        },
        "code": {
            "pattern": "^[A-Za-z0-9]{3,}$"
        },
        "schema_version": {
            "default": "1"
        },
        "version": {
            "pattern": "^[A-Za-z0-9_-.]{3,}$"
        },
        "submitted_id": {
            "pattern": "^[A-Z0-9]{3,}_DONOR-SPECIFIC-ASSEMBLY_[A-Z0-9-_.]{4,}$"
        },
        "assembly_status": {
            "title": "Assembly status",
            "description": "Assembly status of completeness",
            "type": "string",
            "enum": [
                "Complete",
                "Incomplete"
            ]
        },
        "busco_percent_single_copy": {
            "title": "BUSCO Percent Single Copy",
            "description": "BUSCO percentage of highly conserved genes with a single copy present in the assembly",
            "type": "integer",
            "minimum": 0,
            "maximum": 100
        },
        "busco_percent_duplicated": {
            "title": "BUSCO Percent Duplicated",
            "description": "BUSCO percentage of highly conserved genes with multiple copies present in the assembly",
            "type": "integer",
            "minimum": 0,
            "maximum": 100
        },
        "busco_percent_fragmented": {
            "title": "BUSCO Percent Fragmented",
            "description": "BUSCO percentage of highly conserved genes with fragmented representation in the assembly",
            "type": "integer",
            "minimum": 0,
            "maximum": 100
        },
        "busco_percent_missing": {
            "title": "BUSCO Percent Missing",
            "description": "BUSCO percentage of highly conserved genes that are missing from the assembly",
            "type": "integer",
            "minimum": 0,
            "maximum": 100
        },
        "cell_line": {
            "title": "Cell Line",
            "description": "Link to associated Cell Line",
            "type": "string",
            "linkTo": "CellLine"
        },
        "contig_l50": {
            "title": "Contig L50",
            "description": "L50 of contigs: the count of the smallest number of contigs whose total length makes up 50% of the assembly size",
            "type": "integer",
            "minimum": 0
        },
        "contig_n50": {
            "title": "Contig N50",
            "description": "N50 of contigs: the sequence length of the shortest contig at 50% of the total assembly length (bp)",
            "type": "number",
            "minimum": 0
        },
        "donor": {
            "title": "Donor",
            "description": "Link to associated Donor",
            "type": "string",
            "linkTo": "Donor"
        },
        "files": {
            "title": "Files",
            "description": "Files associated with the reference genome",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "linkTo": "File"
            }
        },
        "gc_content": {
            "title": "GC Content",
            "description": "GC Content of assembly (%)",
            "type": "number",
            "minimum": 0,
            "maximum": 100
        },
        "largest_contig": {
            "title": "Largest Contig",
            "description": "Largest contig in the assembly (Mb)",
            "type": "number",
            "minumum": 0
        },
        "number_of_chromosomes": {
            "title": "Number of Chromosomes",
            "description": "Number of chromosomes in the assembly",
            "type": "integer",
            "minimum": 0
        },
        "number_of_contigs": {
            "title": "Number of Contigs",
            "description": "Number of contigs in the assembly",
            "type": "integer",
            "minumum": 0
        },
        "number_of_scaffolds": {
            "title": "Number of Scaffolds",
            "description": "Number of scaffolds in the assembly",
            "type": "integer",
            "minimum": 0
        },
        "ploidy": {
            "title": "Ploidy",
            "description": "Ploidy of assembly",
            "type": "string",
            "enum": [
                "Diploid",
                "Haploid"
            ]
        },
        "scaffold_l50": {
            "title": "Scaffold L50",
            "description": "L50 of scaffolds: the count of the smallest number of scaffolds whose total length makes up 50% of the assembly size",
            "type": "integer",
            "minimum": 0
        },
        "scaffold_n50": {
            "title": "Scaffold N50",
            "description": "N50 of scaffolds: the sequence length of the shortest scaffold at 50% of the total assembly length (bp)",
            "type": "number",
            "minimum": 0
        },
        "total_length": {
            "title": "Total Length",
            "description": "Total number of bases in the assembly (Gb)",
            "type": "number",
            "minimum": 0
        },
        "total_ungapped_length": {
            "title": "Total Ungapped Length",
            "description": "Total ungapped length of the assembly (Gb)",
            "type": "number",
            "minimum": 0
        },
        "quality_value": {
            "title": "Quality Value",
            "description": "Quality value of assembly from Merqury",
            "type": "number",
            "minimum": 0,
            "maximum": 50
        }
    },
    "facets": {
        "submission_centers.display_title": {
            "title": "Submitted By"
        },
        "status": {
            "title": "Status"
        },
        "donor": {
            "title": "Donor"
        },
        "cell_line": {
            "title": "Cell Line"
        }
    },
    "columns": {
        "submitted_id": {
            "title": "Submitted ID"
        },
        "donor": {
            "title": "Donor"
        },
        "code": {
            "title": "Code"
        },
        "cell_line": {
            "title": "Cell Line"
        }
    }
}