{
    "title": "Donor Specific Assembly",
    "$id": "/profiles/donor_specific_assembly.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "submitted_id",
        "submission_centers",
        "category",
        "ploidy",
        "derived_from",
        "software",
        "files",
        "number_of_chromosomes",
        "number_of_contigs",
        "number_of_scaffolds",
        "genome_size",
        "contig_n50",
        "scaffold_n50",
        "total_ungapped_length"
    ],
    "identifyingProperties": [
        "accession",
        "submitted_id",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/file_release"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/submitted_id"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/version"
        }
    ],
    "properties": {
        "accession": {
            "accessionType": "DA"
        },
        "schema_version": {
            "default": "1"
        },
        "version": {
            "pattern": "^[A-Za-z0-9_-.]{3,}$"
        },
        "submitted_id": {
            "pattern": "^[A-Z0-9]{3,}_DONOR-SPECIFIC-ASSEMBLY_[A-Z0-9-_.]{4,}$"
        },
        "category": {
            "title": "Category",
            "description": "Category of the assembly",
            "type": "string",
            "enum": [
                "Donor",
                "Cell Line"
            ]
        },
        "contig_l50": {
            "title": "Contig L50",
            "description": "L50 of contigs: the count of the smallest number of contigs whose total length makes up 50% of the assembly size",
            "type": "integer",
            "minimum": 0
        },
        "contig_n50": {
            "title": "Contig N50",
            "description": "N50 of contigs: the sequence length of the shortest contig at 50% of the total assembly length (bp)",
            "type": "number",
            "minimum": 0
        },
        "gaps_between_scaffolds": {
            "title": "Gaps Between Scaffolds",
            "description": "Number of gaps between scaffolds",
            "type": "integer",
            "minimum": 0
        },
        "gc_content": {
            "title": "GC Content",
            "description": "GC content of assembly (%)",
            "type": "number",
            "minimum": 0,
            "maximum": 100
        },
        "genome_size": {
            "title": "Genome Size",
            "description": "The size of both assembled haplotypes (bp)",
            "type": "number",
            "minimum": 0
        },
        "largest_contig": {
            "title": "Largest Contig",
            "description": "Largest contig in the assembly (bp)",
            "type": "number",
            "minumum": 0
        },
        "number_of_chromosomes": {
            "title": "Number of Chromosomes",
            "description": "Number of chromosomes in the assembly",
            "type": "integer",
            "minimum": 0
        },
        "number_of_contigs": {
            "title": "Number of Contigs",
            "description": "Number of contigs in the assembly",
            "type": "integer",
            "minumum": 0
        },
        "number_of_scaffolds": {
            "title": "Number of Scaffolds",
            "description": "Number of scaffolds in the assembly",
            "type": "integer",
            "minimum": 0
        },
        "percent_single_copy": {
            "title": "Percent Single Copy",
            "description": "Percentage of highly conserved genes with a single copy present in the assembly (BUSCO)",
            "type": "integer",
            "minimum": 0,
            "maximum": 100
        },
        "percent_duplicated": {
            "title": "Percent Duplicated",
            "description": "Percentage of highly conserved genes with multiple copies present in the assembly (BUSCO)",
            "type": "integer",
            "minimum": 0,
            "maximum": 100
        },
        "percent_fragmented": {
            "title": "Percent Fragmented",
            "description": "Percentage of highly conserved genes with fragmented representation in the assembly (BUSCO)",
            "type": "integer",
            "minimum": 0,
            "maximum": 100
        },
        "percent_missing": {
            "title": "Percent Missing",
            "description": "Percentage of highly conserved genes that are missing from the assembly (BUSCO)",
            "type": "integer",
            "minimum": 0,
            "maximum": 100
        },
        "ploidy": {
            "title": "Ploidy",
            "description": "Ploidy of assembly",
            "type": "string",
            "enum": [
                "Diploid",
                "Haploid",
                "Aneuploid"
            ]
        },
        "scaffold_l50": {
            "title": "Scaffold L50",
            "description": "L50 of scaffolds: the count of the smallest number of scaffolds whose total length makes up 50% of the assembly size",
            "type": "integer",
            "minimum": 0
        },
        "scaffold_n50": {
            "title": "Scaffold N50",
            "description": "N50 of scaffolds: the sequence length of the shortest scaffold at 50% of the total assembly length (bp)",
            "type": "number",
            "minimum": 0
        },
        "total_length": {
            "title": "Total Length",
            "description": "Total number of bases in the assembly (bp)",
            "type": "number",
            "minimum": 0
        },
        "total_ungapped_length": {
            "title": "Total Ungapped Length",
            "description": "Total ungapped length of the assembly (bp)",
            "type": "number",
            "minimum": 0
        },
        "quality_value": {
            "title": "Quality Value",
            "description": "Quality value of assembly",
            "type": "number",
            "minimum": 0,
            "maximum": 50
        },
        "files": {
            "title": "Files",
            "description": "Files associated with the reference genome",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "linkTo": "SubmittedFile"
            }
        },
        "derived_from": {
            "title": "Derived From",
            "description": "File set used as input to generate the assembly",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "linkTo": "FileSet"
            }
        },
        "software": {
            "title": "Software",
            "description": "Software used to generate the assembly",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "linkTo": "Software"
            }
        }
    },
    "facets": {
        "submission_centers.display_title": {
            "title": "Submitted By"
        },
        "category": {
            "title": "Category"
        }
    },
    "columns": {
        "submission_centers.display_title": {
            "title": "Submitted By"
        },
        "category": {
            "title": "Category"
        }
    }
}