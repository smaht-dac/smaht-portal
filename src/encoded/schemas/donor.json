{
    "title": "Donor",
    "description": "Individuals who donated tissues",
    "$id": "/profiles/donor.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "external_id",
        "age",
        "sex",
        "submission_centers",
        "submitted_id",
        "tpc_submitted"
    ],
    "identifyingProperties": [
        "accession",
        "submitted_id",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/submitted_id"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "abstract_donor.json#/properties"
        }
    ],
    "properties": {
        "accession": {
            "accessionType": "DO"
        },
        "schema_version": {
            "default": "1"
        },
        "submitted_id": {
            "pattern": "^[A-Z0-9]{3,}_DONOR_[A-Z0-9-_.]{4,}$"
        },
        "protected_donor": {
            "title": "Protected Donor",
            "description": "Link to protected donor",
            "type": "string",
            "linkTo": "ProtectedDonor"
        }
    },
    "facets": {
        "external_id": {
            "title": "Donor ID"
        },
        "age": {
            "title": "Donor Age",
            "aggregation_type": "stats"
        },
        "sex": {
            "title": "Donor Sex"
        },
        "tissue.display_title": {
            "title": "Tissue"
        },
        "submission_centers.display_title": {
            "title": "Submitted By"
        },
        "hardy_scale": {
            "title": "Hardy Scale",
            "aggregation_type": "stats"
        }
    },
    "columns": {
        "submitted_id": {
            "title": "Submitted ID"
        },
        "sex": {
            "title": "Sex"
        },
        "age": {
            "title": "Age"
        },
        "submission_centers.display_title": {
            "title": "Submitted By"
        }
    }
}
