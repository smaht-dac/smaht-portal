{
    "title": "Resource File",
    "description": "DAC-generated resource file",
    "$id": "/profiles/resource_file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "data_category",
        "data_type",
        "file_format"
    ],
    "anyOf": [
        {
            "required": [
                "submission_centers"
            ]
        },
        {
            "required": [
                "consortia"
            ]
        }
    ],
    "identifyingProperties": [
        "accession",
        "aliases",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/title"
        },
        {
            "$ref": "mixins.json#/url"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "file.json#/properties"
        },
        {
            "$ref": "mixins.json#/file_release"
        }
    ],
    "mixinFacets": [
        {
            "$ref": "file.json#/facets"
        }
    ],
    "mixinColumns": [
        {
            "$ref": "file.json#/columns"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "data_category": {
            "items": {
                "type": "string",
                "enum": [
                    "Metadata"
                ]
            },
            "default": [
                "Metadata"
            ]
        },
        "data_type": {
            "items": {
                "type": "string",
                "enum": [
                    "Clinical Information",
                    "Protocol",
                    "Sample Information",
                    "Experimental Information"
                ]
            }
        },
        "version": {
            "description": "The version of the resource file",
            "pattern": "[A-Za-z0-9._-]+"
        }
    },
    "columns": {
        "title": {
            "title": "Name"
        },
        "version": {
            "title": "Version"
        }
    }
}
