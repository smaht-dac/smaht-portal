{
    "title": "Analysis Run",
    "description": "An AnalysisRun item is a collection of MetaWorkflowRuns and represents the execution of a computational analysis pipeline (e.g. variant calling).",
    "$id": "/profiles/analysis_run.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "analysis_type"
    ],
    "anyOf": [
        {
            "required": [
                "submission_centers"
            ]
        },
        {
            "required": [
                "consortia"
            ]
        }
    ],
    "identifyingProperties": [
        "accession",
        "aliases",
        "uuid"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/accession"
        },
         {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/name"
        },
        {
            "$ref": "mixins.json#/description"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/comments"
        }
    ],
    "properties": {
        "accession": {
            "accessionType": "AE"
        },
        "schema_version": {
            "default": "1"
        },
        "analysis_type": {
            "title": "Analysis type",
            "description": "Type of analysis performed in this run.",
            "type": "string",
            "enum": [
                "SNV calling",
                "SV calling"
            ]
        },
        "tissues": {
            "title": "Tissues",
            "description": "Link to associated tissues in the analysis.",
            "type": "array",
            "minItems": 1,
            "maxItems": 100,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "linkTo": "Tissue"
            }
        },
        "comments": {
            "description": "Additional comments on file set",
            "permission": "restricted_fields"
        }
    }
}